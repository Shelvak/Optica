<h1>Cumples de la semana</h1>
<table class="table table-striped">
  <tr>
    <th>DÃ­a</th>
    <th>Cliente</th>
    <th>Edad</th>
  </tr>
  <% @cumples.each do |cump| %>
    <% next unless cump.nacimiento %>
    <tr>
      <td>
        <% if cump.nacimiento.try(:day) == Date.today.day %>
          <%= raw '<b>HOY </b>' %>
        <% else %>
          <%= l(cump.nacimiento, format: :birthdate) %>
        <% end %>
      </td>
      <td><%= link_to (cump.nombre + ' ' + cump.apellido), cump%></td>
      <td><%= edad(cump)%></td>
    </tr>
  <% end %>
</table>
