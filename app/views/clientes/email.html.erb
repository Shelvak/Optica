<% form_for :email, :url => { :controller => 'cliente', :action => 'send_mail' } do |f| %>
  
  <%= f.label :subject %><br />
  <%= f.text_field :subject, :size => 60 %><br />
  <%= f.label :body %><br />
  <%= f.text_area :body, :rols => 10, :cols => 60 %><br />
  <%= submit_tag "Send Email "%>
  
<% end %>
