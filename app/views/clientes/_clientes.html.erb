<h1>Clientes</h1>

<%= form_tag clientes_path, method: :get do %>
  <%= text_field_tag :s_cliente, params[:s_cliente], class: 'no-autowidth' %>
  <%= submit_tag "Buscar", class: 'btn' %>
<% end %>

<table class="table table-striped">
  <tr>
    <th>Cliente</th>
    <th>Documento</th>
    <th>Tel√©fono</th>
    <th>Celular</th>
  </tr>

<% @clientes.each do |cliente| %>
  <tr class="<%= 'error' if cliente.billing_info_incomplete? %>">
    <td><%= link_to (cliente.nombre.split[0] + ' ' + cliente.apellido.split[0]), cliente %></td>
    <td><%= cliente.documento %></td>
    <td><%= cliente.telefono %></td>
    <td><%= cliente.celular %></td>
  </tr>
<% end %>
</table>
<br />

<%= paginate @clientes %> <br />

<%= link_to 'Nuevo Cliente', new_cliente_path, class: 'btn btn-primary' %>
