<h1>Clientes</h1>

<div class="row-fluid">

  <%= link_to 'Nuevo Cliente', new_cliente_path, class: 'btn btn-primary' %>
  <br />
  <br />
</div>

<div class="row-fluid">
<%= form_tag clientes_path, method: :get do %>
  <div class="span9">
    <%= text_field_tag :s_cliente, params[:s_cliente], class: 'span11' %>
  </div>
  <div class="span2">
    <%= submit_tag "Buscar", class: 'btn' %>
  </div>
<% end %>
  </div>

<table class="table table-striped">
  <tr>
    <th>Cliente</th>
    <th>Documento</th>
    <th>Tel√©fono</th>
  </tr>

<% @clientes.each do |cliente| %>
  <tr class="<%= 'error' if cliente.billing_info_incomplete? %>">
    <td><%= link_to cliente.to_name, cliente %></td>
    <td><%= cliente.documento %></td>
    <td><%= cliente.celular.present? ? cliente.celular : cliente.telefono %></td>
  </tr>
<% end %>
</table>
<br />

<%= paginate @clientes %> <br />
