  $(function() {
    $('textarea').tinymce({
      // theme: 'advanced',
      // mode: 'exact',
      // theme_advanced_toolbar_location: "top"
      mode: "exact",
        elements: "textarea",
        theme: "advanced",
        format: "center",
        language: "es",
        dialog_type: "modal",
