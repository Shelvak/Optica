
<div id="email-form">
<br />
<%= form_tag '/emails/sendemail', :multipart => true do %>
  <%= label_tag "destino:" %>
  <%= select :to, "", ['todos', 'ambos', 'flotantes', 'contacto'] %>
  <%= label_tag "asunto:" %>
  <%= text_field_tag :subject %><br /><br />
  <div id='mensaje'>
<br />
  <%= text_area_tag :body %>
  </div>
  <br /> 
 <%= file_field_tag :file, :accept => 'image/jpeg', :multiple => true %><br />
<%= submit_tag "Enviar" %>
<% end %>
</div>

