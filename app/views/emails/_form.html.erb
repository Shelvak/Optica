        theme_advanced_buttons2: "link,unlink,removeformat,cleanup,charmap,emotions,|,formatselect,fontselect,fontsizeselect,|,forecolor,backcolor,insertcode,template",
        theme_advanced_buttons3: "",
        theme_advanced_toolbar_location: "top",
