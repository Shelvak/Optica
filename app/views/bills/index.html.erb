<h1>Facturas</h1>

<div class="readonly-data">

  <table class="table">
    <thead>
      <tr>
        <th>Factura</th>
        <th>Cliente</th>
        <th>NÃºmero</th>
        <th>Fecha</th>
        <th>Monto</th>
      </tr>
    </thead>

    <tbody>
      <% @bills.each do |bill| %>
        <tr>
          <td><%= bill.bill_type %></td>
          <td><%= bill.client %></td>
          <td><%= link_to bill.number, bill %></td>
          <td><%= l(bill.billed_date || bill.created_at.to_date) %></td>
          <td><%= number_to_currency bill.total_amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= paginate @bills %>

</div>
