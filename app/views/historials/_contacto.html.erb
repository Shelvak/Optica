<h1>Lentes de Contacto</h1>

<table id="tablacontato">
  <tr>
    <th>Cliente</th>
    <th>Lente</th>
    <th>Color</th>
    <th>Precio</th>
    <th>Orden</th>
    <th>Fecha</th>
    <th>Retirado??</th>
  </tr>

<% @contactos.each do |historial| %>
  
  <tr> 
    <td><%= link_to (historial.cliente.nombre.split.first + ' ' + historial.cliente.apellido.split.first), historial %></td>
    <td><%= truncate historial.lente, length: 20 %></td>
    <td><%= historial.colorlente %></td>
    <td><%= number_to_currency(historial.precio) %></td>
    <td><%= historial.orden %></td>
    <td><%= l(historial.created_at, format: :little ) %></td>
    <td><%= historial.retirado ? 'retirado' : link_to("Retirar?", retirar_contacto_historial_path(historial), remote: true, class: 'retirado','data-type' => 'html') %></td>
  </tr>
  
<% end %>
</table>
<%= will_paginate @contactos, :param_name => :p_c %>

